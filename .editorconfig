# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# js, json, css files
[*.{js,jsx,ts,tsx,json,css,html}]
indent_style = space
indent_size = 2

# markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off
